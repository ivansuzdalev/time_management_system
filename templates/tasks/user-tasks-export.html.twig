{% extends 'base.html.twig' %}

{% block title %}Export Task{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}
    <div class="container fill">

        <h1 class="h3 mb-3 font-weight-normal">User: {{ username }} tasks export</h1>
        

        <div>
            <form method="get" action="/export-tasks">
                <a href="/export-user-tasks"></a>
                <div class="form-group">
                    <label for="date_from">date_from</label>
                    <input type="date" name="date_from" id="date_from" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="date_to">date_to</label>
                    <input type="date" name="date_to" id="date_to" class="form-control" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary" type="submit">
                        Export
                    </button>
                </div>
            </form>
        </div>
    </div>


{% endblock %}