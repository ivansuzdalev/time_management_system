<!DOCTYPE html>
<html>

        {% block head %}
            <head>
                <meta charset="UTF-8">
                <title>{% block title %}Welcome!{% endblock %}</title>
                {# Run `composer require symfony/webpack-encore-bundle`
                and uncomment the following Encore helpers to start using Symfony UX #}
                {% block stylesheets %}
                    {#{{ encore_entry_link_tags('app') }}#}
                    <link href="{{ asset('css/styles.css') }}" rel="stylesheet"/>
                    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet"/>
                {% endblock %}

                {% block javascripts %}
                    {#{{ encore_entry_script_tags('app') }}#}
                    <script src="{{ asset('js/jquery-3.6.0.min.js') }}" type="text/javascript"></script>
                    <script src="{{ asset('js/bootstrap.js') }}" type="text/javascript"></script>
                {% endblock %}
            </head>
            <div class="inner">
                        <nav class="nav nav-masthead justify-content-center">

                        {% if app.user %}
                            <a class="nav-link" href="{{ path('user_tasks') }}">Tasks</a>
                            <a class="nav-link" href="{{ path('user_task_create') }}">Create Task</a>
                            <a class="nav-link" href="{{ path('user_tasks_export') }}">Export Tasks</a>
                            <a class="nav-link" href="{{ path('app_logout') }}">{{ app.user.username }} Logout</a>
                        {% else %}
                            <a class="nav-link" href="/">Home</a>
                            <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                            <a class="nav-link" href="{{ path('app_register') }}">Register</a>
                        {% endif %}
                </nav>
            </div>
        {% endblock %}

        {% block body %}

        {% endblock %}
        
        {% block footer %}
        <footer class="mastfoot mt-auto">
            <div class="inner">
            <p>Time management system 2021</p>
            </div>
        </footer>
        {% endblock %}

</html>
